@page 
@model Vidhyalaya.Pages_Grades.IndexModel

<h1>All Grades</h1>
  <a href="/grades/create"class="btn btn-success"><i class="bi bi-plus-lg"></i>Add Grade</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
             <th>
                @Html.DisplayNameFor(model => model.Grade[0].Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].ClassTeacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Medium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Subjects)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].SessionYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int counter = 1;}
@foreach (var item in Model.Grade) {
        <tr>
            <th scope="row">
                @(counter++)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassTeacher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medium)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subjects)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionYear)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-pen"></i>Edit</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-eye-fill"></i>Details</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash3"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

